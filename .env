# 应用配置
APP_NAME=DHCP管理系统
APP_ENV=production
APP_DEBUG=false
APP_URL=http://your-server-ip
APP_PORT=8000

# MySQL数据库配置
MYSQL_USER=dhcp
MYSQL_PASSWORD=dhcp_password
MYSQL_DATABASE=dhcp_admin
MYSQL_PORT=3306
DATABASE_URL=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@host.docker.internal:${MYSQL_PORT}/${MYSQL_DATABASE}

# Redis配置
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# JWT配置
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API密钥配置
API_KEY_EXPIRE_DAYS=30

# Kea DHCP配置
KEA_CTRL_PORT=8000
DHCP_PORT=67
KEA_CTRL_AGENT_URL=http://localhost:${KEA_CTRL_PORT}

# BIND9配置
BIND9_RNDC_KEY=your-rndc-key-here
BIND9_RNDC_HOST=localhost
BIND9_RNDC_PORT=953
BIND9_ZONE_FILE_PATH=/etc/bind/zones

# Web服务配置
WEB_PORT=8000
NGINX_PORT=80

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_COLLECTION_INTERVAL=60
ALERT_CHECK_INTERVAL=300
DATA_RETENTION_DAYS=30

# 安全配置
CORS_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=your-email@example.com
SMTP_TLS=true

# 备份配置
BACKUP_DIR=/var/backups
BACKUP_RETENTION_DAYS=7

# Docker网络配置
DOCKER_NETWORK_EXTERNAL=dhcp_external
DOCKER_NETWORK_INTERNAL=dhcp_internal

# 服务状态检查间隔（秒）
SERVICE_CHECK_INTERVAL=60 