# 应用配置
APP_NAME=DHCP管理系统
APP_ENV=production
APP_DEBUG=false
APP_URL=http://your-server-ip    # 替换为你的服务器IP或域名
APP_PORT=8000

# 数据库配置
POSTGRES_USER=dhcp
POSTGRES_PASSWORD=dhcp_password
POSTGRES_DB=dhcp_admin
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis配置
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# JWT配置（用于用户认证）
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API密钥配置
API_KEY_EXPIRE_DAYS=30

# Kea DHCP配置
KEA_CTRL_PORT=8000
DHCP_PORT=67
KEA_CTRL_AGENT_URL=http://kea:${KEA_CTRL_PORT}

# BIND9配置
BIND9_RNDC_KEY=your-rndc-key-here

# Web服务配置
WEB_PORT=8000
NGINX_PORT=80

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 安全配置
CORS_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# 邮件配置（可选，用于告警通知）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=your-email@example.com
SMTP_TLS=true

# 备份配置
BACKUP_DIR=/var/backups
BACKUP_RETENTION_DAYS=7

# Docker网络配置
DOCKER_NETWORK_EXTERNAL=dhcp_external
DOCKER_NETWORK_INTERNAL=dhcp_internal

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=True

# 监控配置
METRICS_COLLECTION_INTERVAL=60
ALERT_CHECK_INTERVAL=300
DATA_RETENTION_DAYS=30

# 邮件通知配置
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM_EMAIL=your-email@example.com

# Kea DHCP服务配置
KEA_CTRL_AGENT_HOST=localhost
KEA_CTRL_AGENT_PORT=8000
KEA_CTRL_AGENT_PROTOCOL=http
KEA_CTRL_AGENT_TIMEOUT=30

# BIND9服务配置
BIND9_RNDC_HOST=localhost
BIND9_RNDC_PORT=953
BIND9_ZONE_FILE_PATH=/etc/bind/zones

# 服务状态检查间隔（秒）
SERVICE_CHECK_INTERVAL=60 