# 应用配置
APP_NAME=DHCP管理系统
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=8000

# 数据库配置
DATABASE_URL=postgresql://dhcp:dhcp@db:5432/dhcp

# Redis配置
REDIS_URL=redis://redis:6379/0

# JWT配置
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API密钥配置
API_KEY_EXPIRE_DAYS=30

# Kea DHCP配置
KEA_CTRL_AGENT_URL=http://kea:8000

# BIND9配置
BIND9_RNDC_KEY=your-rndc-key-here

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 安全配置
CORS_ORIGINS=["http://localhost:3000"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=your-email@example.com
SMTP_TLS=true

# 备份配置
BACKUP_DIR=/var/backups
BACKUP_RETENTION_DAYS=7

# Database Configuration
POSTGRES_USER=dhcp
POSTGRES_PASSWORD=dhcp
POSTGRES_DB=dhcp
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Web Service Configuration
WEB_PORT=8000
NGINX_PORT=80

# DHCP Configuration
DHCP_PORT=67
KEA_CTRL_PORT=8000

# Network Configuration
DOCKER_NETWORK_EXTERNAL=dhcp-network
DOCKER_NETWORK_INTERNAL=internal 